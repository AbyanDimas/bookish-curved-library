server {
    listen 80;
    server_name _;

    # Sajikan file-file statis React
    location / {
        root /home/{{ ansible_user }}/app/dist;
        try_files $uri /index.html;
    }

    # Teruskan semua request API ke satu server backend utama
    location /api/ {
        # Alamat ini harus berupa DNS name dari Internal Load Balancer untuk backend
        proxy_pass http://{{ backend_target_host }}/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
